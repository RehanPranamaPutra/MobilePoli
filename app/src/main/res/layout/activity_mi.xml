<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Informatika"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#ffc40c"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi dan Profil"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Program Studi Manajemen Informatika (Kampus Kab.Pelawawa) merupakan salah satu Program Studi diluar kampus utama(PSKDU) Politeknik Negeri Padang yang mrmriliki sejarah dan keterkaitan erat dengan berdirinya Akademi Komunitas Di Daerah Pelalawan\nAkedemi Komunitas di Daerah Pelawawan.\nBerangkat dari SK Pendirian Akademi Komunitas Nomor\n: 179/P/2013 Tanggal 26 September 2013,Program\nStudi Diluar Domisili (PDD)\nKabupaten Pelawawan di awal berdirinya memiliki\nProgram Studi D2 Elektro dan D2 Manajemen Informatika"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:background="@drawable/btncustom"
            android:id="@+id/btnBackMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="70dp"
            android:text="Back" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>